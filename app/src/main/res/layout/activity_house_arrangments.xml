<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.housearrangment.HouseArrangmentDashboard">


        <LinearLayout
            android:id="@+id/house_details_arrangment_confirmation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/ic_home_black_24dp"
                android:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/house_name_for_arrangment_confirmation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/address_details_on_arrangment_confirmation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/house_details_arrangment_confirmation"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Place"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_location_on_arrangment_confirmation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_details_on_arrangment_confirmation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/address_details_on_arrangment_confirmation"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Date"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_on_arrangment_confirmation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/type_details_on_arrangment_confirmation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/date_details_on_arrangment_confirmation"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_details_on_arrangment_confirmation"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_arrangment_confirmation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Confirm reservation"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>


</RelativeLayout>